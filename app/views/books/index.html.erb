<p id="notice"><%= notice %></p>

<div class="large-8 columns">
  <h1 class="title"><%= t(:listing_books) %></h1>
</div>
<div class="large-2 columns float-right">
  <% if user_signed_in? %>
    <%= link_to t(:new_book), new_book_path, class: "button radius" %>
  <% end %>

</div>


<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.slug %></td>
        <% if user_signed_in? %>
          <td><%= link_to t(:show), book %></td>
          <td><%= link_to t(:edit), edit_book_path(book) %></td>
          <td><%= link_to t(:delete), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

